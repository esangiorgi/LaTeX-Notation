\NewDocumentCommand{\dv}{o m g}{%
  \IfNoValueTF{#3}
    {% CASO 1: Un solo argomento (Arg2 è la variabile) -> Operatore d/dx
     \frac{\dd\IfValueT{#1}{^{#1}}}{\dd #2\IfValueT{#1}{^{#1}}}%
    }
    {% CASO 2: Due argomenti (Arg2=funz, Arg3=var) -> Frazione df/dx
     \frac{\dd\IfValueT{#1}{^{#1}} #2}{\dd #3\IfValueT{#1}{^{#1}}}%
    }%
}
\NewDocumentCommand{\pdv}{o m g}{%
  \IfNoValueTF{#3}
    {% CASO 1: Operatore parziale
     \frac{\partial\IfValueT{#1}{^{#1}}}{\partial #2\IfValueT{#1}{^{#1}}}%
    }
    {% CASO 2: Frazione parziale
     \frac{\partial\IfValueT{#1}{^{#1}} #2}{\partial #3\IfValueT{#1}{^{#1}}}%
    }%
}
