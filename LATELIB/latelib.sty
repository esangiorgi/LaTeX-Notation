\NewDocumentCommand{\inner}{g g}{%
  \ensuremath{
    \IfValueTF{#1}{
      % Se il primo argomento esiste
      \left\langle #1 \IfValueTF{#2}{, #2}{} \right\rangle
    }{
      % Se non viene passato alcun argomento
      \left\langle \cdot , \cdot \right\rangle
    }
  }
}
\NewDocumentCommand{\abs}{g}{
    \ensuremath{
    \IfValueTF{#1}
        {\left| #1 \right|}
        {| \cdot |}
    }
}
\NewDocumentCommand{\norm}{g}{%
  \ensuremath{
      \IfValueTF{#1}
        {\left\| #1 \right\|} % Se c'è l'argomento, mette le barre che si ridimensionano
        {\|\cdot\|}           % Se non c'è l'argomento, mette il simbolo di norma generica
    }
}

